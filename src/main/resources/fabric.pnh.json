{
  "schemaVersion": 1,
  "id": "pnh",
  "version": "${version}",

  "name": "Project: New Hope Mod",
  "description": "A mod which adds custom items specifically to be used on the Project: New Hope modded server.",
  "authors": [
    "AngelBunz"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/pnh/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.assets.main.Main"
    ]
  },
  "mixins": [
    "pnh.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
